<Shell x:Class="crossproba.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:crossproba"
       xmlns:views="clr-namespace:crossproba.Views"
       FlyoutHeaderBehavior="CollapseOnScroll">

    <ShellItem Route="task" Title="(задания и тесты)">
        <ShellSection Title="(тесты)" Icon="questionmark.png">
            <ShellContent ContentTemplate="{DataTemplate views:TaskPage}" />
        </ShellSection>
        <ShellSection Title="(доп.тесты?)" Icon="questionmark.png">
            <ShellContent ContentTemplate="{DataTemplate views:TestsListPage}" />
        </ShellSection>
    </ShellItem>

    <ShellItem Route="leaderboard" Title="(Лидерборд?)" Icon="questionmark.png">
        <ShellContent ContentTemplate="{DataTemplate views:LeaderboardPage}" />
    </ShellItem>

    <ShellItem Route="settings" Title="(Настройки?)" Icon="questionmark.png">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </ShellItem>

    <ShellItem Route="account" Title="(Аккаунт?)" Icon="questionmark.png">
        <ShellContent ContentTemplate="{DataTemplate views:AccountPage}" />
    </ShellItem>

</Shell>

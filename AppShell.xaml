<Shell x:Class="crossproba.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:crossproba"
       xmlns:views="clr-namespace:crossproba.Views"
       FlyoutHeaderBehavior="CollapseOnScroll"
       Style="{StaticResource ShellStyle}"
       FlyoutBackgroundColor="#1B1B1B"
       BackgroundColor="#2C0B98"
       xmlns:controls ="clr-namespace:crossproba.Controls"
       >

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>


    <ShellItem Route="task" Title="Главная" Icon="{AppThemeBinding Light=main_light.svg, Dark=main_dark.svg}">
        <ShellSection Title="Кейсы" Icon="{AppThemeBinding Light=cases_light.svg, Dark=cases_dark.svg}">
            <ShellContent ContentTemplate="{DataTemplate views:MainTestPage}"/>
        </ShellSection>
        <ShellSection Title="Статистика" Icon="{AppThemeBinding Light=stats_light.svg, Dark=stats_dark.svg}">
            <ShellContent ContentTemplate="{DataTemplate views:StatsPage}" />
        </ShellSection>
    </ShellItem>

    <ShellItem Route="about" Title="О приложении" Icon="{AppThemeBinding Light=about_light.svg, Dark=about_dark.svg}">
        <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
    </ShellItem>

    <Shell.FlyoutFooter>
        <controls:FlyoutFooter />
    </Shell.FlyoutFooter>
</Shell>

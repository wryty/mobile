<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crossproba.MainPage">

    <ScrollView>
        <VerticalStackLayout
            x:Name="MainStackLayout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                x:Name="HelloText"
                Text="Здравствуйте!"  
                HorizontalOptions="Center"/>


            <Button 
                x:Name="AnotherButton"
                Text="Пробная кнопка"
                Clicked="AnotherButtonClicked"
                HorizontalOptions="Center"  />

            <Image 
                Source="jenya.png"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

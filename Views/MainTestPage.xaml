<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crossproba.Views.MainTestPage"
             Title="Кейсы и уроки">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        
        <Frame BackgroundColor="#D6ACF6">
            <Label Text="Информационная безопасность" HorizontalOptions="Center" VerticalOptions="Center" FontFamily="PatsySans"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnInformationSecurityTapped" />
            </Frame.GestureRecognizers>
        </Frame>

        <Frame Grid.Column="1" BackgroundColor="#63D4A9">
            <Label Text="Банковская безопасность" HorizontalOptions="Center" VerticalOptions="Center" FontFamily="PatsySans"/>
                <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBankSecurityTapped" />
            </Frame.GestureRecognizers>
        </Frame>
    </Grid>
</ContentPage>
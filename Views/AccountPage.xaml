<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crossproba.Views.AccountPage"
             Title="AccountPage">
    <ScrollView>
        <VerticalStackLayout 
            x:Name="accountPageStackLayout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
                Text="Здесь будет информация об аккаунте! И, возможно, регистрация"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button
                x:Name="accountPageButton"
                Text="Кнопка для добавления label в AnotherTaskPage"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="AccountPageButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crossproba.Views.TaskPage"
             Title="TaskPage">
    <ScrollView>
        <VerticalStackLayout 
            x:Name="taskPageStackLayout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
                Text="Здесь будут тесты!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button
                x:Name="taskPageButton"
                Text="Кнопка для добавления label в TaskPage"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="TaskPageButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crossproba.Views.StatsPage"
             Title="Статистика"
             BackgroundColor="#9DC0D0">
    <StackLayout Padding="20">
        <!-- Заголовок -->
        <Label Text="Статистика прохождения тестов" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />

        <!-- Статистика -->
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Пройденных тестов:" FontSize="Large" />
            <Label x:Name="labelCompleted" FontSize="Medium" />

            <Label Text="Заваленных тестов:" FontSize="Large" />
            <Label x:Name="labelFailed" FontSize="Medium" />
        </StackLayout>
    </StackLayout>
</ContentPage>
